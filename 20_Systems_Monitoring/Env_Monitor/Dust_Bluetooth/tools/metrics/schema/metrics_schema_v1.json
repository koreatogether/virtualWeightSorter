{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Unified Metrics Report Schema",
    "description": "Schema v1 for unified metrics output",
    "type": "object",
    "required": [
        "schema_version",
        "generated_at",
        "engine",
        "scores",
        "raw"
    ],
    "properties": {
        "schema_version": {
            "type": "integer",
            "const": 1
        },
        "generated_at": {
            "type": "string"
        },
        "engine": {
            "type": "object",
            "required": [
                "version",
                "python",
                "mode"
            ],
            "properties": {
                "version": {
                    "type": "string"
                },
                "python": {
                    "type": "string"
                },
                "mode": {
                    "type": "string"
                }
            }
        },
        "scores": {
            "type": "object",
            "required": [
                "total",
                "breakdown"
            ],
            "properties": {
                "total": {
                    "type": "number"
                },
                "breakdown": {
                    "type": "object"
                }
            }
        },
        "raw": {
            "type": "object"
        },
        "trend": {
            "type": [
                "object",
                "null"
            ]
        },
        "warnings": {
            "type": "array"
        },
        "errors": {
            "type": "array"
        }
    },
    "additionalProperties": true
}